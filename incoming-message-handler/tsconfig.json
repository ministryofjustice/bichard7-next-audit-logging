{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "outDir": "build",
    "types": ["node", "jest"],
    "sourceMap": true,
    "baseUrl": "./",
    "preserveSymlinks": false,
    "paths": {
      "src/*": ["src/*"],
      "gateways/*": ["src/gateways/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/e2e/*"]
}
