{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build-dev",
      "problemMatcher": ["$eslint-compact"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "build",
      "detail": "tsc"
    },
    {
      "label": "startDebugging",
      "dependsOn": "build",
      "command": "./environment/setup.sh && scripts/start-debugging.sh",
      "type": "shell"
    },
    {
      "label": "stopDebugging",
      "command": "scripts/stop-debugging.sh",
      "type": "shell"
    }
  ]
}
