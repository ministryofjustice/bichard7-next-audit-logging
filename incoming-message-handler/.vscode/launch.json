{
  "configurations": [
    {
      "name": "Attach to SAM CLI",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9999,
      "localRoot": "${workspaceRoot}/build",
      "remoteRoot": "/var/task",
      "protocol": "inspector",
      "stopOnEntry": false,
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "preLaunchTask": "startDebugging",
      "postDebugTask": "stopDebugging"
    },
    {
      "name": "Debug Tests",
      "request": "launch",
      "type": "node",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["-i"],
      "preLaunchTask": "build",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": ["${workspadceRoot}/dist/**/*"]
    }
  ]
}
